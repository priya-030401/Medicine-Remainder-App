<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".insertcough">

    <TextView
        android:id="@+id/text1"
        android:layout_width="232dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="617dp"
        android:background="#C6DEE1"
        android:text="Cold and Cough"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="66dp" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="82dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="295dp"
        android:layout_marginBottom="453dp"
        app:srcCompat="@drawable/pill1" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="166dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="553dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Select Medicine" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="82dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="293dp"
        android:layout_marginBottom="348dp"
        app:srcCompat="@drawable/calender" />

    <EditText
        android:id="@+id/date1"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="360dp"
        android:hint="dd/mm/yyyy"
        android:inputType="date"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="231dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="192dp"
        android:entries="@array/timeofday" />


    <Spinner
        android:id="@+id/spinnerco"
        android:layout_width="231dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="460dp"
        android:entries="@array/coldcoughh" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="82dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="297dp"
        android:layout_marginBottom="181dp"
        app:srcCompat="@drawable/alarm2" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="106dp"
        android:background="#FAD8E3"
        android:text="Add^"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="219dp"
        android:layout_marginBottom="106dp"
        android:background="#FAD8E3"
        android:text="Back"
        android:textSize="18sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/footer2"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#F33478" />

    <Button
        android:id="@+id/homebtn2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="330dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/ic_home"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/viewbtn2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="222dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/ic_eye"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/setbtn2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/ic_settings"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/profilebtn2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/ic_profile"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/timerimg2"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="308dp"
        android:layout_marginBottom="259dp"
        app:srcCompat="@drawable/ic_timer" />

    <EditText
        android:id="@+id/timer2"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="275dp"
        android:ems="10"
        android:hint="HH:MM:SS"
        android:inputType="textPersonName|time" />

    <EditText
        android:id="@+id/min2"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="276dp"
        android:ems="10"
        android:inputType="textPersonName" />

</RelativeLayout>